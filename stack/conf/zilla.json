            "capability": "produce",
            "reply-to": "replies",
            "topic": "commands",
            "key": "${idempotencyKey}",
            "overrides": {
              "zilla:domain-model": "RequestCommand",
              "zilla:identity": "${guarded['jwt40082c1e-8108-4359-9067-64f2c11361d8'].identity}"
            }
          },
          "guarded": {
            "jwt40082c1e-8108-4359-9067-64f2c11361d8": [
              "write:request"
            ]
          }
        }
      ]
    },
    "kafka_cache_client98d198b7-b232-41c8-ad3e-56310f7b9ec3": {
      "type": "kafka",
      "kind": "cache_client",
