        },
        {
          "when": [
            {
              "headers": {
                ":method": "PUT",
                ":path": "/current-user"
              }
            },
            {
              "headers": {
                ":method": "GET",
                ":path": "/current-user"
              }
            },
            {
              "headers": {
                ":method": "GET",
                ":path": "/users"
              }
            },
            {
