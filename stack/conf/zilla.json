            "event": {
              "id": "[\"${base64(key)}\",\"${etag}\"]"
            },
            "topic": "balances",
            "filters": [
            {
              "key": "${guarded['jwt40082c1e-8108-4359-9067-64f2c11361d8'].identity}"
            }]
          },
          "guarded": {
            "jwt40082c1e-8108-4359-9067-64f2c11361d8": [
              "read:balances"
            ]
          }
        }
      ]
    },
    "http-kafka_proxy4ee61c88-61e6-4676-a420-4ff918b0c534": {
