          [
            {
              "path": "/"
            }
          ],
          "exit": "filesystem_server0",
          "with":
          {
            "path": "index.html"
          }
        },
        {
          "when":
          [
            {
              "path": "/{path}"
            }
          ],
          "exit": "filesystem_server0",
          "with":
          {
            "path": "${params.path}"
          }
        }
      ]
    },
    "filesystem_server0":
